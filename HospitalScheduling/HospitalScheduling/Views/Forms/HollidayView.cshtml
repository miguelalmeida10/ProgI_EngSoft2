@model HollidayForm

@{
    ViewData["Title"] = "HollidayView";
}

<h2>Vacation Registiration</h2>


<form method="post" asp-action="Rsvp">
    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="form-group">
        <label asp-for="DateStart">Starting date of vacation:</label>
        <input asp-for="DateStart" class="form-control" placeholder="Please, enter the starting date of your vacation" />
    </div>
    <div class="form-group">
        <label asp-for="DateEnd">Ending date of vacation:</label>
        <input asp-for="DateEnd" class="form-control" placeholder="Please, enter the ending date of your vacation" />
    </div>

    <button type="submit" class="btn btn-primary">Submit</button>
</form>
