@model IEnumerable<HospitalScheduling.Models.Shift>

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StartDate)
            </th>
            <th>
                Time Left
            </th>
            <th>
                End Date
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.StartDate)
                </td>
                <td>
                    <meta http-equiv="Refresh" content="60" />
                    @{
                        var milis = item.StartDate.AddHours(item.DurationHours).AddMinutes(item.DurationMinutes).AddSeconds(item.DurationSeconds).Subtract(DateTime.Now);
                        var date = (milis.Ticks < 0) ? new DateTime() : new DateTime(milis.Ticks);
                        @date.ToLongTimeString()
                    }
                </td>
                <td>
                    @(new DateTime(item.StartDate.AddHours(item.DurationHours).AddMinutes(item.DurationMinutes).AddSeconds(item.DurationSeconds).Ticks).ToString())
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.ShiftID">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.ShiftID">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.ShiftID">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
