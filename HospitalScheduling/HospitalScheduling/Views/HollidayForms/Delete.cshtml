@model HospitalScheduling.Models.HollidayForm

@{
    ViewData["Title"] = "Index";
    ViewData["Active"] = "HolidayForms";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewData["Active"] - Delete</title>
</head>
<body>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>HollidayForm</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.DateStart)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.DateStart)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.DateEnd)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.DateEnd)
        </dd>
    </dl>

    @{
        Dictionary<int, string> dic = new Dictionary<int, string>();
        dic.Add(Model.VacationID, @Html.DisplayNameFor(model => model.VacationID));
        @await Html.PartialAsync("_DeletePartial", dic);
    }
    <form>
        <input type="hidden" asp-for="VacationID" />
        <a style="color:white" id="delete" data-toggle="modal" data-target="#deleteconfirmation" class="btn btn-danger">Delete</a>
        <a asp-action="Index" class="btn btn-info">Back to List</a>
    </form>
    <br />
</div>
</body>
</html>
