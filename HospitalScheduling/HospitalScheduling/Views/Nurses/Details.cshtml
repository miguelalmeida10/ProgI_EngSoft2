@if (Model.Nurse.Status != EmpStatus.Approved)
{
    @if ((await AuthorizationService.AuthorizeAsync(
    User, Model.Nurse, NurseOperations.Approve)).Succeeded)
    {
        <form style="display:inline;" method="post">
            <input type="hidden" name="id" value="@Model.Nurse.EmployeeID" />
            <input type="hidden" name="status" value="@EmpStatus.Approved" />
            <button type="submit" class="btn btn-xs btn-success">Approve</button>
        </form>
    }
}

@if (Model.Nurse.Status != EmpStatus.Rejected)
{
    @if ((await AuthorizationService.AuthorizeAsync(
    User, Model.Nurse, NurseOperations.Reject)).Succeeded)
    {
        <form style="display:inline;" method="post">
            <input type="hidden" name="id" value="@Model.Nurse.EmployeeID" />
            <input type="hidden" name="status" value="@EmpStatus.Rejected" />
            <button type="submit" class="btn btn-xs btn-success">Reject</button>
        </form>
    }
}

