@model HospitalScheduling.Models.Nurse

@{
    ViewData["Title"] = "Edit";
    ViewData["Active"] = "Nurses";

}

<div class="hero-wrap" style="background-image: url('images/bg_6.jpg'); background-attachment:fixed;height:200px">
    <div class="overlay"></div>
    <div class="container" style="height:200px">
        <div class="row no-gutters slider-text align-items-center justify-content-center" style="height:200px" data-scrollax-parent="true">
            <div class="col-md-8 ftco-animate text-center fadeInUp ftco-animated">
                <p class="breadcrumbs"><span class="mr-2"><a asp-action="Index" asp-controller="Home">Home</a></span> <span>Nurses - @ViewData["Title"]</span></p>
                <h1 class="mb-3 bread">Nurses - @ViewData["Title"]</h1>
            </div>
        </div>
    </div>
</div>
<br />
<center>
    <hr />
    <div>
        <div class="col-md-4" >
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="NurseID" />
                <table class="table-borderless">
                    <tr>
                        <td style="min-width:7em;text-align:justify">
                            <label asp-for="Name" class="control-label" style="margin-top:10px">
                            </label>
                            <label style="margin-top:10px">: </label>
                        </td>
                        <td>
                            <input asp-for="Name" class="form-control" placeholder="Insert a name" style="text-align:justify;width:30em;" />
                        </td>
                        <td style="min-width:30em;text-align:justify">
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </td>
                    </tr>
                    <tr>
                        <td style="min-width:7em;text-align:justify">
                            <label asp-for="Email" class="control-label" style="margin-top:10px">
                            </label><label style="margin-top:10px">: </label>
                        </td>
                        <td>
                            <input asp-for="Email" class="form-control" placeholder="Insert an email" style="text-align:justify" />
                        </td>
                        <td style="min-width:30em;text-align:justify">
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </td>
                    </tr>
                    <tr>
                        <td style="min-width:7em;text-align:justify">
                            <label asp-for="Phone" class="control-label" style="margin-top:10px">
                            </label><label style="margin-top:10px">: </label>
                        </td>
                        <td>
                            <input asp-for="Phone" class="form-control" placeholder="Insert a phone number" style="text-align:justify" />
                        </td>
                        <td style="min-width:30em;text-align:justify">
                            <span asp-validation-for="Phone" class="text-danger"></span>
                        </td>
                    </tr>
                    <tr>
                        <td style="min-width:7em;text-align:justify">
                            <label asp-for="Sons" class="control-label" style="margin-top:10px">
                            </label><label style="margin-top:10px">: </label>
                        </td>
                        <td>
                            @Html.DropDownListFor(m => m.Sons, new List<SelectListItem>() { new SelectListItem("True", "true"), new SelectListItem("False", "false") }, null, new { @id = "sonsbox", @class = "form-control", placeholder = "Does the nurse have children", @style = "text-align:justify;", @onchange = "displaySons()" })
                        </td>
                        <td style="min-width:30em;text-align:justify">
                            <span asp-validation-for="Sons" class="text-danger"></span>
                        </td>
                    </tr>
                    <tr>
                        <td style="min-width:7em;text-align:justify">
                            <label asp-for="Birthday" class="control-label" style="margin-top:10px">
                            </label><label style="margin-top:10px">: </label>
                        </td>
                        <td>
                            <input asp-for="Birthday" class="form-control" placeholder="Insert a birth date" style="text-align:justify" />
                        </td>
                        <td style="min-width:30em;text-align:justify">
                            <span asp-validation-for="Birthday" class="text-danger"></span>
                        </td>
                    </tr>
                    <tr id="displaysons">
                        <td style="min-width:7em;text-align:justify">
                            <label asp-for="BirthdaySon" class="control-label" style="margin-top:10px">
                            </label> <label style="margin-top:10px">: </label>
                        </td>
                        <td>
                            <input asp-for="BirthdaySon" class="form-control" placeholder="Insert son`s birth date" style="text-align:justify" />
                        </td>
                        <td style="min-width:30em;text-align:justify">
                            <span asp-validation-for="BirthdaySon" class="text-danger"></span>
                        </td>
                    </tr>

                    <tr>
                        <td style="min-width:7em;text-align:justify">
                            <label asp-for="Address" class="control-label" style="margin-top:10px">
                            </label><label style="margin-top:10px">: </label>
                        </td>
                        <td>
                            <input asp-for="Address" class="form-control" placeholder="Insert an address" style="text-align:justify;" />
                        </td>
                        <td style="min-width:30em;text-align:justify">
                            <span asp-validation-for="Address" class="text-danger"></span>
                        </td>
                    </tr>
                    <tr>
                        <td style="min-width:8em;text-align:justify">
                            <label asp-for="Speciality" class="control-label" style="margin-top:10px">
                            </label><label style="margin-top:10px">: </label>
                        </td>
                        <td style="text-align:justify">
                            <select asp-for="SpecialityID" asp-items="ViewBag.Speciality" class="form-control" placeholder="Insert a speciality" style="text-align:justify;"></select>
                        </td>
                        <td>
                            <span asp-validation-for="SpecialityID" class="text-danger"></span>
                        </td>
                    </tr>
                </table>
                <br />
                <div class="form-group">
                    <input type="submit" value="Save" class="btn btn-success" />
                    <a asp-action="Index" class="btn btn-info">Back to List</a>
                </div>
            </form>
        </div>
    </div>
    <br />
</center>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
